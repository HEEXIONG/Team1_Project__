<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="org.zerock.mapper.BoardMapper">
  
  <!-- <insert id="insert">
  InSERT INTO pd_board (pno,title,pinfo,celler,price) values (pd_seq.nextval,${title},${pinfo},${celler},${price})
  </insert> -->
  <insert id="insert">
  insert into pd_board (pno,title,pinfo,celler,price)
VALUES (pd_seq.nextval,#{title},#{pinfo},#{celler},#{price})
  </insert>
  
  <select id="getlist" resultType="org.zerock.domain.BoardVO">
  select * from pd_board
  </select>
  
  <update id="update">
  update pd_board
	set
	title = #{title},
	pinfo = #{pinfo},
	celler = #{celler},
	price = #{price},
	updatedate = sysdate
	where pno = #{pno};
  </update>
 
 
  </mapper>